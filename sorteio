import random

def realizar_sorteio():
    """Fun√ß√£o principal para realizar o sorteio"""
    while True:
        try:
            # Solicita o n√∫mero de participantes
            num_participantes = int(input("Digite o n√∫mero de participantes do sorteio: "))
            
            # Valida√ß√£o da entrada
            if num_participantes <= 0:
                print("‚ùå Por favor, digite um n√∫mero maior que zero.")
                continue
                
            # Gera lista de participantes (01, 02, 03, etc.)
            participantes = [f"{i:02d}" for i in range(1, num_participantes + 1)]
            
            # Exibe os participantes
            print(f"\nüéØ Participantes do sorteio (Total: {num_participantes}):")
            print(f"Participantes: {', '.join(participantes)}")
            
            # Realiza o sorteio
            sorteado = random.choice(participantes)
            
            # Exibe o resultado
            print(f"\nüéâ RESULTADO DO SORTEIO:")
            print(f"üèÜ Participante sorteado: {sorteado}")
            
            break
            
        except ValueError:
            print("‚ùå Por favor, digite apenas n√∫meros inteiros.")
            continue

def main():
    """Fun√ß√£o principal com op√ß√£o de repetir"""
    print("=" * 50)
    print("üé≤ SISTEMA DE SORTEIO ALEAT√ìRIO")
    print("=" * 50)
    
    while True:
        # Realiza um sorteio
        realizar_sorteio()
        
        # Pergunta se deseja fazer outro sorteio
        print("\n" + "-" * 40)
        while True:
            continuar = input("Deseja realizar outro sorteio? (s/n): ").lower().strip()
            if continuar in ['s', 'sim', 'y', 'yes']:
                print("\n" + "=" * 50)
                break
            elif continuar in ['n', 'n√£o', 'nao', 'no']:
                print("\nüôè Obrigado por usar o sistema de sorteio!")
                print("üëã At√© logo!")
                return
            else:
                print("‚ùå Por favor, digite 's' para sim ou 'n' para n√£o.")

# Executa o programa
if __name__ == "__main__":
    main()
